<%= render 'users/side_bar', user: @user, book: @book %>
	<div class="col-lg-9">
		<h2>Books</h2>
		<table class="table table-hover, table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %></td>
						<td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
