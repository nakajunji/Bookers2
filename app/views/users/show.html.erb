	<div class="row">
		<div class="col-lg-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to edit_user_path, class: "btn btn-default btn-block" do %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span><% end %>
			</div>
			<h2>New Book</h2>
		</div>
	</div>