
<%= render 'users/side_bar', user: @user, book: @book %>
<div class="col-lg-9">
		<h2>Book detail</h2>
		<table class="table">
			<tbody>
				<tr>
					<td><%= link_to user_path(@user.id) do %>
						<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %><br><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to book_path(@post_book.id) do %><%= @post_book.title %><% end %></td>
					<td><%= @post_book.body %></td>
					<% if user_signed_in? && @post_book.user_id == current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@post_book.id), class: "btn btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@post_book), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to permanently delete this book?"} %></td>
					<% end %>
				</tr>
			</tbody>

		</table>
	</div>